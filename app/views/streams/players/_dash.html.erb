<video id="html5_player" controls="true"></video>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    var video = document.querySelector("#html5_player");
    var context = new Dash.di.DashContext();
    var player = new MediaPlayer(context);
    player.startup();
    player.attachView(video);
    player.setAutoPlay(true);
    player.attachSource("https://<%= Settings.rtmp.server %>/live/dash/<%= @stream.user.username.downcase %>/index.mpd");
  });
</script>