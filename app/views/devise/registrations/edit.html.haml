.row
.col-xs-12.col-md-8
  .well
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
      %fieldset
        %legend Edit Account
        .form-group
          .col-md-3.hidden-sm.hidden-xs
            = f.label :email, class: 'control-label'
          .col-md-9
            = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email Address'
        .form-group
          .col-md-3.hidden-sm.hidden-xs
            = f.label :username, class: 'control-label'
          .col-md-9
            = f.text_field :username, class: 'form-control', placeholder: 'Username'
        .form-group
          .col-md-3.hidden-sm.hidden-xs
            = f.label :password, class: 'control-label'
          .col-md-9
            = f.password_field :password, class: 'form-control', placeholder: 'Password'
        .form-group
          .col-md-3.hidden-sm.hidden-xs
            = f.label :password_confirmation, 'Confirm password', class: 'control-label'
          .col-md-9
            = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirm'
        .form-group
          .col-md-3.hidden-sm.hidden-xs
            = f.label :current_password, 'Current password', class: 'control-label'
          .col-md-9
            = f.password_field :current_password, class: 'form-control', placeholder: 'Current Password'
            %i.tiny= "we need your current password to confirm your changes"
        .form-group
          .col-md-offset-3.col-md-9
            = f.submit "Update Account", class: 'btn btn-primary'
