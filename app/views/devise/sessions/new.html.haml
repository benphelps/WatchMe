.row
  .col-xs-12.col-md-8
    .well
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        %fieldset
          %legend Sign In
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :email, class: 'control-label'
            .col-md-9
              = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email Address'
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :password, class: 'control-label'
            .col-md-9
              = f.password_field :password, class: 'form-control', placeholder: 'Password'
          .form-group
            .col-md-3.hidden-sm.hidden-sm
              = f.label :remember_me, class: 'control-label'
            .col-md-3.hidden-sm.hidden-sm
              = f.check_box :remember_me
          .form-group
            .col-md-offset-3.col-md-9
              = f.submit "Sign In", class: 'btn btn-primary'
          .form-group
            .col-md-offset-3.col-md-9
              = link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-sm btn-success'
.row
  .col-xs-12.col-md-8
    .well
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        %fieldset
          %legend Sign Up
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :email, class: 'control-label'
            .col-md-9
              = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email Address'
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :username, class: 'control-label'
            .col-md-9
              = f.text_field :username, class: 'form-control', placeholder: 'Username'
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :password, class: 'control-label'
            .col-md-9
              = f.password_field :password, class: 'form-control', placeholder: 'Password'
          .form-group
            .col-md-3.hidden-sm.hidden-xs
              = f.label :password_confirmation, 'Confirm', class: 'control-label'
            .col-md-9
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirm'
          .form-group
            .col-md-offset-3.col-md-9
              = f.submit "Sign Up", class: 'btn btn-primary'
